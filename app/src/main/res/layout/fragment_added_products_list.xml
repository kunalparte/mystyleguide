<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kunalparte.mystyleguide.Fragments.AddedProductsListFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/frag_add_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/allcategoriesList"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/noDataText"
        android:visibility="gone"
        android:id="@+id/noDataText"
        android:textSize="16sp"
        android:textColor="@color/grey"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/maroon"
        app:elevation="6dp"
        app:backgroundTint="@color/maroon"
        android:src="@drawable/add_icon" />

</RelativeLayout>
