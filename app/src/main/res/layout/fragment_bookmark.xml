<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kunalparte.mystyleguide.Fragments.BookmarkFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/frag_bookmark_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/bookMarksList" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/noBookmarks"
        android:id="@+id/noBookmarkText"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="@color/grey"/>

</RelativeLayout>
